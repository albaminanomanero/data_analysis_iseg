#!/bin/bash
set -ex

# Upgrade pip just in case
pip install --upgrade pip

# Install nbgitpuller to sync with other GitHub repos
pip install nbgitpuller

# Install Jupyter Notebook extensions
pip install jupyter_contrib_nbextensions

# Install and enable nbextensions for Jupyter Notebook
jupyter contrib nbextension install --user

# Enable Variable Inspector (only works in Notebook + Python)
jupyter nbextension enable varInspector/main

# Enable ipywidgets (commonly needed for nbextensions)
pip install ipywidgets
jupyter nbextension enable widgetsnbextension --user

# Enable nbgitpuller server extension
jupyter serverextension enable --sys-prefix nbgitpuller || true
